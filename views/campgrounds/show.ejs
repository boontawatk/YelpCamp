<% layout('layouts/boilerplate') %>
<h1><%= campground.title %></h1>
<h2><%= campground.location %></h2>
<img class="img-fluid" src="<%= campground.image %>" alt="campground">
<h3>Price : <%= campground.price %> USD</h3>
<p>Description : <%= campground.description %></p>
<a class="btn btn-warning my-2" href="/campgrounds/<%= campground._id %>/edit">edit</a>
<form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
  <button class="btn btn-danger">Delete</button>
</form>
<a class="btn btn-secondary my-2" href="/campgrounds">Back to All Campgrounds</a>